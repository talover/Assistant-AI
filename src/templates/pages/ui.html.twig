{% extends 'layout/layout.html.twig' %}
{% block title %}markup rig{% endblock %}

{% block page %}
	<div class="main-container">
		<h1>ui</h1>

		<h2>Icons</h2>
		{% set icons = [
			{ name: 'angle-left', icon: 'angle-left', width: 40, height: 40 },

		] %}

		{% set columns = 3 %}
		<table class="w-full">
			<tr>
				{% for i in 1..columns %}
					<th class="text_center">Icon</th>
					<th class="text_start">Name</th>
				{% endfor %}
			</tr>
			{% for item in icons %}
				{% if loop.index0 % columns == 0 %}
					<tr>
				{% endif %}
				<td>
					<svg style="width: {{ item.width }}px; height: {{ item.height }}px;" class="icon mx-auto">
						<use href="/img/sprite.svg#{{ item.icon }}"></use>
					</svg>
				</td>
				<td>#{{ item.name }}</td>

				{% if loop.index0 % columns == columns - 1 or loop.last %}
					</tr>
				{% endif %}
			{% endfor %}
		</table>
	</div>
{% endblock %}

